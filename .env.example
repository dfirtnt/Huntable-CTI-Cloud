# Database Configuration
DATABASE_URL=postgresql+asyncpg://cti_user:your_password@localhost:5432/cti_scraper
DATABASE_URL_SYNC=postgresql://cti_user:your_password@localhost:5432/cti_scraper

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_DAILY_BUDGET=1.50
BEDROCK_MONTHLY_BUDGET=45.00

# Cost Monitoring
COST_ALERT_EMAIL=your-email@example.com
COST_ALERT_THRESHOLD_25=25.00
COST_ALERT_THRESHOLD_50=50.00
COST_ALERT_THRESHOLD_80=80.00
COST_ALERT_THRESHOLD_95=95.00

# Langfuse Configuration
LANGFUSE_PUBLIC_KEY=your_public_key
LANGFUSE_SECRET_KEY=your_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-this

# ML Model Configuration
ML_MODEL_BUCKET=cti-scraper-models
ML_MODEL_VERSION=1.0.0

# Content Filter Configuration
CONTENT_FILTER_THRESHOLD=0.7
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Workflow Configuration
WORKFLOW_MIN_HUNT_SCORE=70
WORKFLOW_ENABLED=false
